@model Demo.Models.ApplicationVM

<h2>编辑</h2>

<form asp-action="EditApplication" method="post">
    <div class="form-group">
        <label asp-for="UserId">所属</label>
        <select asp-for="UserId" class="form-control"
                asp-items="Model.UserOptions">
            <option value="">请选择用户</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="JobId">申请岗位</label>
        <select asp-for="JobId" class="form-control"
                asp-items="Model.JobOptions">
            <option value="">请选择岗位</option>
        </select>
        <span asp-validation-for="JobId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status">申请状态</label>
        <select asp-for="Status" class="form-control"
                asp-items="Model.StatusOptions">
            <option value="">更改</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">保存修改</button>
    <a class="btn btn-secondary" href="/Test/Applications">返回</a>
</form>