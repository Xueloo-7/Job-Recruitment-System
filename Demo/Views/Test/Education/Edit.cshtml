@model Demo.Models.EducationVM

<h2>编辑</h2>

<form asp-action="EditEducation" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId" />

    <p>User: @Model.UserName</p>

    <div class="form-group">
        <label>Qualification</label>
        <select asp-for="Qualification" asp-items="Model.QualificationOptions" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Institution</label>
        <select asp-for="Institution" asp-items="Model.InstitutionOptions" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">保存修改</button>
    <a class="btn btn-secondary" href="/Test/Educations">返回</a>
</form>