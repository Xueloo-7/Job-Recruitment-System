@model Demo.Models.Institution

<h2>确认删除</h2>
<p>确定要删除 <strong>@Model.Name</strong> 吗？此操作无法恢复。</p>

<form asp-action="DeleteInstitution" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">确认删除</button>
    <a class="btn btn-secondary" href="/Test/Institutions">取消</a>
</form>
