@model Demo.Models.UserVM

<h2>创建新用户</h2>

<form asp-action="CreateUser" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PasswordHash">密码（Hash）</label>
        <input asp-for="PasswordHash" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Role"></label>
        <select asp-for="Role" class="form-control" asp-items="Html.GetEnumSelectList<Demo.Models.Role>()"></select>
    </div>

    <button type="submit" class="btn btn-success">保存</button>
    <a class="btn btn-secondary" href="/Test/Users">返回</a>
</form>
