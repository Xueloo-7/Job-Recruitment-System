@model Demo.Models.CategoryVM

<h2>编辑次分类</h2>

<form asp-action="EditSubCategory" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ParentId">请选择主分类</label>
        <select asp-for="ParentId" class="form-control" asp-items="Model.ParentCategoryOptions">
            <option value="">-- 请选择一个主分类 --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">保存修改</button>
    <a class="btn btn-secondary" href="/Test/Categories">返回</a>
</form>
