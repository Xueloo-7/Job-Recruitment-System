@model Demo.Models.ResumeVM

<h2>创建</h2>

<form asp-action="CreateResume" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="UserId">所属</label>
        <select asp-for="UserId" class="form-control"
                asp-items="Model.UserOptions">
            <option value="">请选择用户</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageFile">Logo 上传</label>
        <input asp-for="ImageFile" type="file" class="form-control-file" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">保存</button>
    <a class="btn btn-secondary" href="/Test/Resumes">返回</a>
</form>