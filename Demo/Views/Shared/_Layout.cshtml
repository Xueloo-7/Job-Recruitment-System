<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Job Seeker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="~/images/favicon.png" />

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sideMenu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Profile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Employer.css" asp-append-version="true" />

    @RenderSection("head", required: false)
</head>
<body>
    <header class="navbar">
        <div class="navbar-left">
            <img src="~/images/JobSeekerLogo.jpg" alt="Logo" class="logo" />
            <h1 class="brand">Job Seeker</h1>
            <nav class="nav-links">
                <a asp-controller="Home" asp-action="Index" class="@(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")">Job Search</a>
                <a asp-controller="Home" asp-action="Profile" class="@(ViewBag.Active == "Profile" ? "active" : "")">Profile</a>
                <a asp-controller="Home" asp-action="Employer" class="@(ViewBag.Active == "Employer" ? "active" : "")">Employer</a>
                <a asp-controller="Home" asp-action="SignIn" class="@(ViewBag.Active == "SignIn" ? "active" : "")">Sign In</a>
            </nav>
        </div>

        <div class="navbar-right">
            <!-- Profile logo -->
            <a asp-controller="Home" asp-action="Profile" class="icon-button">
                <i class="fa-solid fa-user"></i>
            </a>

            <!-- side Menu Button -->
            <button class="menu-toggle icon-button">
                <i class="fas fa-bars"></i>
            </button>
            @await Html.PartialAsync("_sideMenu")
        </div>
    </header>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer>
        <!-- Social Media Icons -->
        <div class="social-icons">
            <a href="https://www.youtube.com" target="_blank" title="YouTube" class="tooltip" data-tooltip="YouTube">
                <i class="fab fa-youtube"></i>
            </a>
            <a href="https://www.instagram.com" target="_blank" title="Instagram" class="tooltip" data-tooltip="Instagram">
                <i class="fab fa-instagram"></i>
            </a>
            <a href="https://www.facebook.com" target="_blank" title="Facebook" class="tooltip" data-tooltip="Facebook">
                <i class="fab fa-facebook"></i>
            </a>
            <a href="https://wa.me" target="_blank" title="WhatsApp" class="tooltip" data-tooltip="WhatsApp">
                <i class="fab fa-whatsapp"></i>
            </a>
            <a href="https://www.wechat.com" target="_blank" title="WeChat" class="tooltip" data-tooltip="WeChat">
                <i class="fab fa-weixin"></i>
            </a>
            <a href="https://www.twitter.com" target="_blank" title="X" class="tooltip" data-tooltip="X (Twitter)">
                <i class="fab fa-x-twitter"></i>
            </a>
            <a href="https://www.tiktok.com" target="_blank" title="TikTok" class="tooltip" data-tooltip="TikTok">
                <i class="fab fa-tiktok"></i>
            </a>
            <a href="https://youtu.be/dQw4w9WgXcQ?si=EoXUgR4ibdl9-5d8" target="_blank" title="Contact Us" class="tooltip" data-tooltip="Contact Us">
                <i class="fas fa-envelope"></i>
            </a>
        </div>
        Developed by <b>ROXY'S</b> &middot; &copy; @DateTime.Now.Year
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/app.js"></script>

    @RenderSection("foot", required: false)
</body>
</html>
