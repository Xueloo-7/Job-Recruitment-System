@model IEnumerable<Demo.Models.Education>

<h2>Education</h2>

<div id="educationContainer">
    @await Html.PartialAsync("_Education", Model)
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Qualification:</th>
                <th>Institution:</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var edu in Model)
            {
                <tr>
                    <td>@edu.Qualification</td>
                    <td>@edu.Institution</td>
                    <td>
                        <a asp-action="EditEducationPartial"
                           asp-controller="Profile"
                           asp-route-id="@edu.Id"
                           data-ajax="true"
                           data-ajax-mode="replace"
                           data-ajax-update="#educationContainer">
                            <button type="button" class="edit-btn">Edit</button>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No education records found.</p>
}
