@model Demo.Models.JobVM1

@{
    ViewBag.Title = "Update Job Posting";
}

@section Scripts {
    <script src="~/js/app.js"></script>
    <link rel="stylesheet" href="~/css/test.css" asp-append-version="true" />
}

<form asp-action="Update1" asp-controller="DemoJob" enctype="multipart/form-data" method="post">
    @* 隐藏字段保存 Id *@
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title">Job Title</label>
        <input asp-for="Title" class="form-control" autofocus />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CompanyName">Company Name</label>
        <input asp-for="CompanyName" class="form-control" />
        <span asp-validation-for="CompanyName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserId">Owner</label>
        <select asp-for="UserId" class="form-control" asp-items="Model.UserOptions">
            <option value="">--- Please select an owner ---</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="Model.CategoryOptions">
            <option value="">--- Please select a Category ---</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WorkType">Work Type</label>
        <select asp-for="WorkType" class="form-control" asp-items="ViewBag.WorkTypes">
            <option value="">-- Select Work Method --</option>
        </select>
        <span asp-validation-for="WorkType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PayType">Pay Type</label>
        <select asp-for="PayType" class="form-control" asp-items="ViewBag.PayTypes">
            <option value="">-- Select Payment Method --</option>
        </select>
        <span asp-validation-for="PayType" class="text-danger"></span>
    </div>

    <div class="form-group salary-group">
        <div class="salary-field">
            <label asp-for="SalaryMin">Salary Min</label>
            <div class="input-group">
                <span class="input-group-text">RM</span>
                <input asp-for="SalaryMin" type="number" class="form-control" />
            </div>
            <span asp-validation-for="SalaryMin" class="text-danger"></span>
        </div>

        <div class="salary-field">
            <label asp-for="SalaryMax">Salary Max</label>
            <div class="input-group">
                <span class="input-group-text">RM</span>
                <input asp-for="SalaryMax" type="number" class="form-control" />
            </div>
            <span asp-validation-for="SalaryMax" class="text-danger"></span>
        </div>
    </div>

    <button type="submit">Next</button>
</form>
