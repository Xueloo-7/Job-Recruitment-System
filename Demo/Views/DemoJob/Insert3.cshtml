@model Demo.Models.JobVM3

@{
    ViewBag.Title = "Job Posting";
}

@section Scripts {
    <script src="~/js/app.js"></script>
    <link rel="stylesheet" href="~/css/test.css" asp-append-version="true" />
}
<form asp-action="Insert3" asp-controller="DemoJob" enctype="multipart/form-data" method="post">


    <label asp-for="LogoFile">Please Upload a Company LOGO</label>
    <label class="upload">
        <input asp-for="LogoFile" accept="image/jpeg,image/png" hidden>
        <img src="~/images/default_logo.png">
    </label>
    <span asp-validation-for="LogoFile"></span>


    <div class="form-actions">
        <a asp-action="Insert2" class="back-btn">Back</a>
        <button type="submit" class="next-btn">Submit</button>
    </div>

    <style>
        .form-actions {
            display: flex;
            justify-content: space-between; /* 左右两边分开 */
            margin-top: 20px;
        }

        .back-btn {
            display: inline-block;
            padding: 8px 16px;
            background-color: #007bff;
            color: white;
            border-radius: 6px;
            text-decoration: none;
        }

            .back-btn:hover {
                background-color: #0056b3;
            }

        .next-btn {
            padding: 8px 16px;
            background-color: #28a745;
            color: white;
            border-radius: 6px;
            border: none;
            cursor: pointer;
        }

            .next-btn:hover {
                background-color: #1e7e34;
            }
    </style>
</form>


