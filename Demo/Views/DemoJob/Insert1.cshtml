@model Demo.Models.JobVM

@{
    ViewBag.Title = "Job Posting";
}

@section Scripts {
    <script src="~/js/app.js"></script>
    <link rel="stylesheet" href="~/css/test.css" asp-append-version="true" />
}

<form asp-action="Insert" asp-controller="DemoJob"  enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Title">Job Title</label>
        <input asp-for="Title" class="form-control" autofocus />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CompanyName">Company Name</label>
        <input asp-for="CompanyName" class="form-control" />
        <span asp-validation-for="CompanyName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
        </div>

    <div class="form-group">
            <label asp-for="WorkType">Work Type</label>
            <select asp-for="WorkType" class="form-control" asp-items="ViewBag.WorkTypes">
                <option value="">-- Select Work Method --</option>
            </select>
            <span asp-validation-for="WorkType" class="text-danger"></span>
        </div>

    <div class="form-group">
            <label asp-for="PayType">Pay Type</label>
            <select asp-for="PayType" class="form-control" asp-items="ViewBag.PayTypes">
                <option value="">-- Select Payment Method --</option>
            </select>
            <span asp-validation-for="PayType" class="text-danger"></span>
        </div>
   

    <div class="form-group salary-group">
        <div class="salary-field">
            <label asp-for="SalaryMin">Salary Min</label>
            <div class="input-group">
                <span class="input-group-text">RM</span>
                <input asp-for="SalaryMin" type="number" class="form-control" />
            </div>
            <span asp-validation-for="SalaryMin" class="text-danger"></span>
        </div>


        <div class="salary-field">
            <label asp-for="SalaryMax">Salary Max</label>
            <div class="input-group">
                <span class="input-group-text">RM</span>
            <input asp-for="SalaryMax" type="number" class="form-control" />
            </div>
            <span asp-validation-for="SalaryMax" class="text-danger"></span>
        </div>
    </div>

   

</form>