@model Demo.Models.JobVM2

@{
    ViewBag.Title = "Job Posting";
}

@section Scripts {
    <script src="~/js/app.js"></script>
    <link rel="stylesheet" href="~/css/test.css" asp-append-version="true" />
}

<!-- summary Field -->
<form asp-action="Insert2" asp-controller="DemoJob" enctype="multipart/form-data" method="post">
    <div class="summary">
        <label asp-for="Summary">Summary</label>
        <div class="input-group">
            <textarea asp-for="Summary" class="form-control" rows="3"></textarea>
        </div>
        <span asp-validation-for="Summary" class="text-danger"></span>
    </div>


    <div class="description">
        <label asp-for="Description">Description</label>
        <div class="input-group">
            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        </div>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PromotionId">Promotion</label>
        <select asp-for="PromotionId" class="form-control"
                asp-items="Model.PromotionOptions">
            <option value="">---Please choose a package---</option>
        </select>
        <span asp-validation-for="PromotionId" class="text-danger"></span>
    </div>

    
    <div class="form-actions">
        <a asp-action="Insert1" class="back-btn">Back</a>
        <button type="submit" class="next-btn">Next</button>
    </div>

    <style>
        .form-actions {
            display: flex;
            justify-content: space-between; /* 左右两边分开 */
            margin-top: 20px;
        }

        .back-btn {
            display: inline-block;
            padding: 8px 16px;
            background-color: #007bff;
            color: white;
            border-radius: 6px;
            text-decoration: none;
        }

            .back-btn:hover {
                background-color: #0056b3;
            }

        .next-btn {
            padding: 8px 16px;
            background-color: #28a745;
            color: white;
            border-radius: 6px;
            border: none;
            cursor: pointer;
        }

            .next-btn:hover {
                background-color: #1e7e34;
            }
    </style>
</form>

