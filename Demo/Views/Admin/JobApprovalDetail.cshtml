@model Demo.Models.Job

@{
    Layout = "_AdminLayout";
}

<div class="card">
    <h1>Job Approval Detail</h1>

    <div class="form-group">
        <label>Title:</label>
        <p class="readonly">@Model.Title</p>
    </div>

    <div class="form-group">
        <label>Company:</label>
        <p class="readonly">@Model.User.CompanyName</p>
    </div>

    <div class="form-group">
        <label>Description:</label>
        <p class="readonly">@Model.Description</p>
    </div>

    <div class="form-group">
        <label>Recruiter:</label>
        <p class="readonly">@Model.User.Name</p>
    </div>

    <div class="button-group">
        <form asp-action="ApproveJob" asp-controller="Admin" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-primary">Approve</button>
        </form>

        <form asp-action="RejectJob" asp-controller="Admin" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <input type="text" name="reason" placeholder="Rejection reason" required class="reject-reason" />
            <button type="submit" class="btn btn-danger">Reject</button>
        </form>

        <a asp-action="JobApprovals" asp-controller="Admin" class="btn btn-secondary">Back</a>
    </div>
</div>

<style>
    .form-group { margin-bottom: 15px; }
    .readonly { background-color: #f1f1f1; padding: 8px; border-radius: 6px; }
    .button-group { display: flex; gap: 10px; margin-top: 20px; }
    .reject-reason { padding: 6px; border: 1px solid #ccc; border-radius: 4px; }
    .btn { padding: 8px 16px; border-radius: 6px; text-decoration: none; cursor: pointer; border: none; }
    .btn-primary { background-color: #4a6cf7; color: #fff; }
    .btn-danger { background-color: #e63946; color: #fff; }
    .btn-secondary { background-color: #6c757d; color: #fff; }
</style>
