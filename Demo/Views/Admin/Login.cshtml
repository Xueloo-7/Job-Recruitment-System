@model LoginVM

@{
    Layout = "_EmptyLayout";
}

<div class="signIn-container admin-theme">
    <h1>Admin Login</h1>

    <form asp-controller="Admin" asp-action="Login" method="post" asp-antiforgery="true">

        <div class="form-group">
            <input asp-for="Email" placeholder="Email Address" required />
            <span asp-validation-for="Email" class="error"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" placeholder="Password" required />
            <span asp-validation-for="Password" class="error"></span>
        </div>

        <div class="form-group checkbox-group">
            <label><input asp-for="RememberMe"> Remember Me</label>
        </div>


        <button type="submit">Login</button>
    </form>

    <div class="extra-links">
        <a asp-controller="Admin" asp-action="Register">Register Admin Account</a>

        <a asp-controller="Account" asp-action="ForgotPassword">Forgot Password?</a>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/admin.css"  />
    <link rel="stylesheet" href="~/css/sign-in.css" />
}