@model Demo.Models.Notification

@{
    ViewData["Title"] = "Create Notification";
}

<h2>Create Notification</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="UserId" class="control-label">Select User</label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users">
            <option value="">-- Select a User --</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Content" class="control-label">Content</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Send Notification" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
