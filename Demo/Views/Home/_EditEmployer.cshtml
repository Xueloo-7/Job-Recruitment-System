@model Demo.Models.User

<div class="employer-info">
    <h2>Edit Employer Information</h2>

    <form id="editEmployerForm" asp-action="EditEmployer" asp-controller="Home" method="post">
        <table class="info-table">
            <tr>
                <th>First Name</th>
                <td>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th>Location</th>
                <td>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th>Email</th>
                <td>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th>Phone Number</th>
                <td>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th>Is Active</th>
                <td>
                    <input asp-for="IsActive" type="checkbox" />
                </td>
            </tr>
        </table>

        <div style="text-align:center; margin-top:20px;">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="EmployerInfo" asp-route-userId="@Model.Id" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/Employer.css" />
}