@{

    ViewData["Title"] = "Employer Sign In";
    Layout = null;
}

<link rel="stylesheet" href="~/css/EsignIn.css" />

<header>
    <div class="logo">
        <img src="~/images/JobSeekerLogo.jpg" alt="Logo" class="logo" />
        <h1 class="header-title">Job Seeker</h1>
    </div>
</header>

<div class="page-wrapper">
    <div class="container">

        <div class="top-link">
            <a href="/JobSeeker/SignIn">Are you looking for a job?</a>
        </div>

        <div class="form-box">
            <h2>Register as an employer</h2>

            <form method="post" action="/Employer/Register">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" required />
                <span class="error">Required field</span>

                <label for="password">Password</label>
                <input type="password" id="password" name="password" required />

                <p class="policy">
                    <input type="checkbox">By registering, I agree to the <a href="#">Collection Notice</a> and <a href="#">Privacy Policy</a>. I agree to receive messages about my job ads and ROXY’S products that support my hiring process. I can unsubscribe at any time.
                </p>

                <p class="policy">
                    <input type="checkbox">In addition to receiving messages that support my hiring process, I agree to receive hiring advice, newsletters, surveys and other messages from ROXY’S. I can unsubscribe at any time.
                </p>

                <button type="submit" class="register-btn">Register employer account</button>
            </form>

            <p class="signin-link">Already have account? <a href="/Employer/Login">Sign In</a></p>
        </div>
    </div>

    <footer>
        <a href="#">Security & Privacy</a>
        <a href="#">Terms & Conditions</a>
        <a href="#">Contact</a>
        <span class="copyright">© ROXY’S. All rights reserved.</span>
    </footer>
</div>
