@{
    ViewBag.Title = "Welcome";
    ViewBag.Active = "Profile";
    ViewData["Title"] = "User Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Profile Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/Profile.css" />
</head>
<body>
    <div class="profile-container">
        <div class="tab-buttons">
            <button class="tab-button active" data-tab="Profile">Profile</button>
            <button class="tab-button" data-tab="Summary">Summary</button>
            <button class="tab-button" data-tab="CareerHistory">Career History</button>
            <button class="tab-button" data-tab="Education">Education</button>
        </div>

        <div id="tab-content" class="profile-card">
            <div class="tab-content-section" id="ProfileTab">
                @await Html.PartialAsync("~/Views/User/_Profile.cshtml")
            </div>
            <div class="tab-content-section" id="SummaryTab" style="display:none;">
                @await Html.PartialAsync("~/Views/User/_Summary.cshtml")
            </div>
            <div class="tab-content-section" id="CareerHistoryTab" style="display:none;">
                @await Html.PartialAsync("~/Views/User/_CareerHistory.cshtml")
            </div>
            <div class="tab-content-section" id="EducationTab" style="display:none;">
                @await Html.PartialAsync("~/Views/User/_Education.cshtml")
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/js/Profile.js"></script>
</body>
</html>
