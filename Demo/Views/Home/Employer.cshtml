@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="employer-container">
    <div class="employer-card">
        <div class="punch-holes">
            @for (int i = 0; i < 10; i++)
            {
                <span class="hole"></span>
            }
        </div>
        <h2>Hire the right people for your business</h2>

        <div class="highlight-message">
            <i class="fas fa-bullhorn"></i>FREE job ads for selected roles
        </div>

        @* submit then go to register page (send email to it for showing email) *@
        <form asp-controller="Employer" asp-action="Login" method="get" id="employer-form">
            <label for="email">Enter Your Business Email</label>
            <div class="form-row">
                <input type="email" name="Email" placeholder="Email Address" required />
                <button type="submit">Sign In</button>
            </div>
        </form>

        <p class="help-text">
            Need help? Reach out to us on <a href="https://wa.me">WhatsApp</a><br />
            Or visit our <a href="#">Help Centre</a>.
        </p>
    </div>
</div>

<div class="features-section">
    <h2>We make it quicker and easier to find the right people</h2>
    <div class="features">
        <div class="feature-card">
            <img src="~/images/image.png" alt="1st choice icon" />
            <p class="title">1st choice for Malaysian job seekers</p>
            <p>Meet job seekers where they prefer to search for jobs</p>
        </div>
        <div class="feature-card">
            <img src="~/images/image2.png" alt="5 million profiles icon" />
            <p class="title">Over 5 million candidate profiles</p>
            <p>Reach our large and diverse pool of Malaysian talent for your business</p>
        </div>
        <div class="feature-card">
            <img src="~/images/image1.png" alt="job placements icon" />
            <p class="title">#1 job placements</p>
            <p>Highest success rate in matching employers to the right talent</p>
        </div>
    </div>    
    
    <a asp-controller="Employer" asp-action="Register" class="create-btn">Create account</a>
</div>

@section Scripts {
    <script src="~/js/Employer.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/employer.css" />
}