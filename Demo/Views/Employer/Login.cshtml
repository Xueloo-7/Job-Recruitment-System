@model Demo.Models.LoginVM


<div class="signIn-container">
    <h1>Sign In</h1>

    <form asp-controller="Employer" asp-action="Login" method="post" asp-antiforgery="true" class="email-login">

        <div class="form-group">
            <input asp-for="Email" placeholder="Email Address" required />
            <span asp-validation-for="Email" class="error"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" placeholder="Password" required />
            <span asp-validation-for="Password" class="error"></span>
        </div>

        <div class="form-group checkbox-group">
            <input asp-for="RememberMe" />
            <label asp-for="RememberMe">Remember Me</label>
        </div>

        <button type="submit">Login</button>
    </form>


    <a asp-controller="Employer" asp-action="Register">Don’t have account?</a>

</div>

@section Styles {
    <link rel="stylesheet" href="/css/signIn.css" />
}