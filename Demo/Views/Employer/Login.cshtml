@model LoginVM

@{
    Layout = "_EmptyLayout";
}

<div class="signIn-container employer-theme">
    <a asp-controller="Home" asp-action="Index" class="back-btn">Are you looking for a job?</a>

    <h1>Employer Login</h1>

    <form asp-controller="Employer" asp-action="Login" method="post" asp-antiforgery="true" class="email-login">
        <div class="form-group">
            <input asp-for="Email" placeholder="Email Address" required />
            <span asp-validation-for="Email" class="error"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" placeholder="Password" required />
            <span asp-validation-for="Password" class="error"></span>
        </div>

        <div class="form-group checkbox-group">
            <label><input asp-for="RememberMe"> Remember Me</label>
        </div>

        <button type="submit">Login</button>
    </form>

    <div class="divider">or</div>

    <button class="social-btn google">
        <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google" class="google-icon">
        Continue with Google
    </button>

    <div class="extra-links">
        <span> Don’t have account?<a asp-controller="Employer" asp-action="Register"> Register One!</a></span>

        <a asp-controller="Account" asp-action="ForgotPassword">Forgot Password?</a>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/sign-in.css" />
}