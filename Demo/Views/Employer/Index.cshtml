@model EmployerDashboardVM
@{
    Layout = "_EmployerLayout";
}

<div class="container">
    <div class="header">
        <div class="content">
            <h1>Hi, @Model.EmployerName!</h1>
            <p>You are in the right place to find your next hire. Get started by creating your first job ad.</p>
            <a asp-controller="Job" asp-action="Create" class="post-btn">Post a Job</a>
        </div>

        <div class="image">
            <img src="/images/background.jpg" alt="Alternate Text" />
        </div>
    </div>
</div>

<hr />

<div class="container">
    <div class="main">
        <div class="top">
            <h2>My recent job ads</h2>
        </div>
        <div class="card-container">
            <div class="card post">
                <h4>Total Post</h4>
                <p>@Model.TotalJobs</p>
            </div>
            <div class="card candidate">
                <h4>Total Candidate</h4>
                <p>@Model.TotalApplications</p>
            </div>
            <div class="card hired">
                <h4>Total Hired</h4>
                <p>@Model.TotalHires</p>
            </div>
        </div>
        <div class="job-list">
            <h2>@Model.EmployerName - @Model.TotalJobs Positions in total</h2>

            <table>
                <thead>
                    <tr>
                        <th>Status</th>
                        <th>Job</th>
                        <th>Candidates</th>
                        <th>Hired</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Jobs != null && Model.Jobs.Any())
                    {
                        foreach (var job in Model.Jobs)
                        {
                            <tr>
                                <td>@job.Status</td>
                                <td>
                                    <div>
                                        <span>@job.Title</span><br />
                                        <small>@job.Location</small>
                                    </div>
                                </td>
                                <td>@job.Candidates</td>
                                <td>@(job.Hired > 0 ? job.Hired.ToString() : "-")</td>
                                <td>
                                    <a asp-controller="Job" asp-action="Edit" asp-route-id="@job.JobId" class="edit-btn">Edit</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="no-data">暂无职位</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/employer.css" />
}

@section Scripts {
    <script src="~/js/Employer.js"></script>
}