@model Demo.Models.ApplyPageVM
@{
    var job = ViewBag.Job as Demo.Models.Job;
}

@section Scripts {
    <script src="~/js/app.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/css/jobApply.css" asp-append-version="true" />
    <script>
        // 切换箭头方向
        document.addEventListener("DOMContentLoaded", function () {
            const toggle = document.querySelector("#jobInfoToggle");
            toggle.addEventListener("click", function () {
                const icon = this.querySelector("i");
                const target = document.querySelector(this.getAttribute("data-bs-target"));

                setTimeout(() => {
                    if (target.classList.contains("show")) {
                        icon.classList.remove("fa-chevron-down");
                        icon.classList.add("fa-chevron-up");
                    } else {
                        icon.classList.remove("fa-chevron-up");
                        icon.classList.add("fa-chevron-down");
                    }
                }, 200);
            });
        });
    </script>
}

<div class="apply-container shadow-sm p-4 rounded bg-light">
    <h2 class="mb-3 text-primary">Apply for <strong>@job?.Title</strong></h2>

    <div class="d-flex align-items-center mb-3">
        <img src="@Url.Content("~/" + job?.LogoImageUrl)" class="company-logo me-3" alt="Company Logo">
        <div>
            <h5 class="mb-1">@job?.CompanyName</h5>

            <!-- Job Info (Description + Summary) -->
            <button class="btn btn-sm btn-outline-secondary collapse-toggle mb-2"
                    id="jobInfoToggle" type="button">
                <i class="fas fa-chevron-down me-1"></i> Job Description & Summary
            </button>

            <div class="job-info" id="jobInfo">
                <div class="card card-body">
                    <h6 class="fw-bold">Description</h6>
                    @Html.Raw(job?.Description ?? "No Description available")
                    <hr />
                    <h6 class="fw-bold">Summary</h6>
                    @Html.Raw(job?.Summary ?? "No Summary available")
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Apply" asp-controller="JobApply" enctype="multipart/form-data" method="post">
        <!-- 只保留这个，不要再单独加 name="jobId" -->
        <input asp-for="Application.JobId" type="hidden" value="@job?.Id" />

        <!-- UserId 后端会补，所以可以不传，如果想传也行 -->
        <input asp-for="Resume.UserId" type="hidden" value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" />
        <input asp-for="Application.UserId" type="hidden" value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" />

        <!-- Resume Upload -->
        <div class="mb-3">
            <label asp-for="Resume.ImageFile" class="form-label fw-bold">Please Upload Your Resume</label>
            <div class="upload-box">
                <label class="btn btn-outline-primary">
                    <i class="fas fa-upload"></i> Upload Resume
                    <input asp-for="Resume.ImageFile" accept=".pdf,.doc,.docx" hidden>
                </label>
            </div>
            <span asp-validation-for="Resume.ImageFile" class="text-danger"></span>
        </div>

        <!-- Application fields -->
        <div class="form-group mb-3">
            <label asp-for="Application.Source">Which source informed you about this job opportunity?</label>
            <select asp-for="Application.Source" class="form-control" asp-items="Model.Application.Sources">
                <option value="">--- Please select a source ---</option>
            </select>
            <span asp-validation-for="Application.Source" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Application.SalaryExpected">What's your expected monthly basic salary?</label>
            <select asp-for="Application.SalaryExpected" class="form-control" asp-items="Model.Application.SalaryExpecteds">
                <option value="">--- Please select ---</option>
            </select>
            <span asp-validation-for="Application.SalaryExpected" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Application.NoticeTime">How much notice are you required to give your current employer?</label>
            <select asp-for="Application.NoticeTime" class="form-control" asp-items="Model.Application.NoticeTimes">
                <option value="">--- Please select ---</option>
            </select>
            <span asp-validation-for="Application.NoticeTime" class="text-danger"></span>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <button type="submit" class="btn btn-success w-100">Submit Application</button>
    </form>
