@model Demo.Models.ApplyPageVM
@{
    var job = ViewBag.Job as Demo.Models.Job;
}

<div class="apply-container">
    <img src="@Url.Content("~" + job?.LogoImageUrl)" class="company-logo" alt="Company Logo">
    <p class="small">Applying for</p>
    <h1>@job?.Title</h1>
    <p class="location">@job?.Location</p>

    <!-- Job Info Toggle -->
    <button class="btn-toggle" id="jobInfoToggle" type="button">
        <i class="fas fa-chevron-down" style="margin-right:10px"></i> Job Description & Summary
    </button>

    <div class="job-info" id="jobInfo">
        <div class="card">
            <p class="small">Posted @((DateTime.Now - job?.CreatedAt)?.Days)d ago</p>
            <h2>Description</h2>
            @Html.Raw(job?.Description ?? "No Description available")
            <hr style="margin-top:20px" />
            <h2>Summary</h2>
            @Html.Raw(job?.Summary ?? "No Summary available")
        </div>
    </div>

    <form asp-action="Apply" asp-controller="JobApply" enctype="multipart/form-data" method="post">
        <!-- 只保留这个，不要再单独加 name="jobId" -->
        <input asp-for="Application.JobId" type="hidden" value="@job?.Id" />

        <!-- UserId 后端会补，所以可以不传，如果想传也行 -->
        <input asp-for="Resume.UserId" type="hidden" value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" />
        <input asp-for="Application.UserId" type="hidden" value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" />

        <!-- Application fields -->
        <div class="form-group">
            <label asp-for="Application.Source">Which source informed you about this job opportunity?</label>
            <select asp-for="Application.Source" class="form-control" asp-items="Model.Application.Sources">
            </select>
            <span asp-validation-for="Application.Source" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Application.SalaryExpected">What's your expected monthly basic salary?</label>
            <select asp-for="Application.SalaryExpected" class="form-control" asp-items="Model.Application.SalaryExpecteds">
            </select>
            <span asp-validation-for="Application.SalaryExpected" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Application.NoticeTime">How much notice are you required to give your current employer?</label>
            <select asp-for="Application.NoticeTime" class="form-control" asp-items="Model.Application.NoticeTimes">
            </select>
            <span asp-validation-for="Application.NoticeTime" class="text-danger"></span>
        </div>

        @* resume upload *@
        <div class="resume-upload-container form-group">
            <label>Upload Resume:</label>
            <div class="form-check">
                <label class="form-check-label" for="uploadYes">
                    I want to upload my resume
                </label>
                <input class="form-check-input" type="radio" name="includeResume" id="uploadYes" value="true">
            </div>
            <div class="form-check">
                <label class="form-check-label" for="uploadNo">
                    I do not want to upload a resume
                </label>
                <input class="form-check-input" type="radio" name="includeResume" id="uploadNo" value="false" checked>
            </div>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <button type="submit" class="btn btn-success w-100">Submit Application</button>
    </form>
</div>

@* summary and description style *@
@section Styles {
    <link rel="stylesheet" href="~/css/job-apply.css" />
}

@section Scripts {
    <script src="~/js/job-apply.js"></script>
}


