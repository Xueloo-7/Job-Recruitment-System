@model List<Demo.Models.ApplicationListVM>

<h1>My Job Applications</h1>

@if (!Model.Any())
{
    <p>You have not applied for any jobs yet.</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Job Title</th>
                <th>Company Name</th>
                <th>Applied At</th>
                <th>Status</th>
                <th>Hired Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in Model)
            {
                <tr>
                    <td>@app.JobTitle</td>
                    <td>@app.CompanyName</td>
                    <td>@app.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>@app.Status</td>
                    <td>@(app.HiredDate.HasValue? app.HiredDate.Value.ToString("yyyy-MM-dd") : "-")</td>
                    <td>
                        <a asp-action="Detail" asp-controller="JobApply" asp-route-applicationId="@app.ApplicationId">
                            View Detail
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
