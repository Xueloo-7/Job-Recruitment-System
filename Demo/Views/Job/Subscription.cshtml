<!-- Views/Promotion/Select.cshtml -->
@model List<Demo.Models.Promotion>
@{
    ViewBag.Title = "Choose a Promotion Package";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/promotion.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/promotion.js"></script>

<h2>Choose a Promotion Package</h2>

<div class="promotion-container">
    @foreach (var promo in Model)
    {
        <div class="promo-card" data-id="@promo.Id">
            <h3>@promo.Name</h3>
            <p class="price">RM @promo.Price</p>
            <button class="select-btn">Apply</button>
            <p class="duration">Duration: @promo.DurationDay days</p>
            <ul class="description">
                @foreach (var line in promo.Description?.Split("\\n") ?? new string[0])
                {
                    <li>@line</li>
                }
            </ul>
        </div>
    }
</div>

<div class="footer-bar">
    <button id="next-btn" disabled>Next</button>
</div>

